<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/animeFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.timplifier.kitsu.presentation.ui.fragments.anime.AnimeFragment"
        android:label="fragment_anime"
        tools:layout="@layout/fragment_anime" >
        <action
            android:id="@+id/action_animeFragment_to_detailedAnimeFragment"
            app:destination="@id/detailedAnimeFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailedAnimeFragment"
        android:name="com.timplifier.kitsu.presentation.ui.fragments.anime.details.DetailedAnimeFragment"
        android:label="fragment_detailed_anime"
        tools:layout="@layout/fragment_detailed_anime" >
        <argument
            android:name="animeId"
            app:argType="string" />
    </fragment>
</navigation>