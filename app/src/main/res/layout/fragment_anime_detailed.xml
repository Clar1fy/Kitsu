<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.fragments.anime.detailed.AnimeDetailedFragment">

    <ImageView
        android:id="@+id/im_cover"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:contentDescription="@string/image_for_anime_s_cover_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_poster_image_margin"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="90dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_poster_image"
        android:layout_width="15dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="25dp" />


    <ImageView
        android:id="@+id/im_poster"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:translationZ="10dp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/gl_poster_image_margin"

        tools:src="@tools:sample/avatars" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_subtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="155dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_ranks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="135dp" />

    <TextView
        android:id="@+id/tv_subtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/tv"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/im_cover" />

    <TextView
        android:id="@+id/tv_bullet_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/bullet_point"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/tv_year"
        app:layout_constraintStart_toEndOf="@id/tv_subtype"
        app:layout_constraintTop_toBottomOf="@id/im_cover" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/_2017"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tv_subtype"
        app:layout_constraintTop_toBottomOf="@id/im_cover" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/helvetica_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/tv_subtype"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="loremloremloremloremloremloremloremloremloremlorem"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/im_poster" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:elevation="20dp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/tv_synopsis">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_kitsu_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/kitsu_score"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_average_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/helvetica_bold"
                android:text="@string/_64"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/tv_kitsu_score" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/im_rating"
        android:layout_width="24dp"


        android:layout_height="24dp"
        android:src="@drawable/ic_detailed_star"
        app:layout_constraintBottom_toBottomOf="@id/cv_score"
        app:layout_constraintStart_toStartOf="@id/gl_ranks"
        app:layout_constraintTop_toBottomOf="@id/tv_synopsis" />

    <TextView
        android:id="@+id/tv_rating"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/rank_7691"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/cv_score"
        app:layout_constraintStart_toStartOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/tv_synopsis" />

    <ImageView
        android:id="@+id/im_popularity"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/heart"
        app:layout_constraintStart_toStartOf="@id/gl_ranks"
        app:layout_constraintTop_toBottomOf="@id/im_rating" />

    <TextView
        android:id="@+id/tv_popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/rank_204"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/cv_score"
        app:layout_constraintStart_toStartOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/im_rating" />


    <TextView
        android:id="@+id/tv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/details"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/cv_score" />

    <TextView
        android:id="@+id/tv_studios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/studios"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/tv_details" />


    <TextView
        android:id="@+id/tv_studio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/pierrot_studio_pierrot"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/tv_details" />


    <View
        android:id="@+id/studios_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_studios" />

    <TextView
        android:id="@+id/tv_episode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/episodes"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/studios_underline" />

    <TextView
        android:id="@+id/tv_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/tbd"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/studios_underline" />

    <View
        android:id="@+id/episode_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_episode" />


    <TextView
        android:id="@+id/tv_stat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/status"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/episode_underline" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/currently_airing"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/episode_underline" />

    <View
        android:id="@+id/status_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_status" />


    <TextView
        android:id="@+id/tv_premiered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/premiered"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/status_underline" />

    <TextView
        android:id="@+id/tv_premiere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/apr_5_spring_2017"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/status_underline" />

    <View
        android:id="@+id/premiered_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_premiered" />


    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:fontFamily="@font/helvetica_regular"
        android:text="@string/age_rating"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/gl_poster_image"
        app:layout_constraintTop_toBottomOf="@id/premiered_underline" />

    <TextView
        android:id="@+id/tv_age_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helvetica_bold"
        android:text="@string/pg_teens_13_or_older"
        android:textSize="14sp"

        app:layout_constraintStart_toStartOf="@id/gl_subtype"
        app:layout_constraintTop_toBottomOf="@id/premiered_underline" />

    <View
        android:id="@+id/age_rating_underline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_age_rating" />


</androidx.constraintlayout.widget.ConstraintLayout>
